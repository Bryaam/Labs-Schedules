<%= form_with model: reservation_request do |f| %>
  <h6 class="heading-small text-muted mb-4">Datos</h6>
  <div class="pl-lg-4">
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :course_id, "Curso", class: 'form-control-label'%>
          <%= f.select :course_id, courses_for_select, {selected: reservation_request.course_id}, { class: "form-control form-control-alternative select"} %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :laboratory_classroom_id, "Aula", class: 'form-control-label'%>
          <%= f.select :laboratory_classroom_id, laboratory_classrooms_for_select, {}, { class: "form-control form-control-alternative select"} %>
        </div>
      </div>
    </div>
  </div>

  <h6 class="heading-small text-muted mb-4">Detalles</h6>
  <div class="pl-lg-4">
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :starting_time, "Hora inicial", class: 'form-control-label'%>
          <%= f.text_field :starting_time, class: 'form-control form-control-alternative timepicker' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :ending_time, "Hora final", class: 'form-control-label'%>
          <%= f.text_field :ending_time, class: 'form-control form-control-alternative timepicker' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :estimated_date, "Fecha de reserva", class: 'form-control-label'%>
          <%= f.text_field :estimated_date, class: 'form-control form-control-alternative datepicker' %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :person_in_charge, "Persona a cargo", class: 'form-control-label'%>
          <%= f.text_field :person_in_charge, class: 'form-control form-control-alternative' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= f.label :description, "DescripciÃ³n", class: 'form-control-label'%>
          <%= f.text_area :description, rows: "4", class: 'form-control form-control-alternative' %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= f.label :special_requirements, "Requerimientos especiales", class: 'form-control-label'%>
          <%= f.text_area :special_requirements, rows: "4", class: 'form-control form-control-alternative' %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12 text-right">
    <button class="btn btn-icon btn-3 btn-primary" type="submit">
      <span class="btn-inner--icon"><i class="ni ni-check-bold"></i></span>
      <span class="btn-inner--text">Guardar</span>
    </button>
  </div>
<% end %>

